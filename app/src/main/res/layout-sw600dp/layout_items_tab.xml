<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5sp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_category"
                android:layout_weight="1.8"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/item_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder_check_2"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_offer"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="20% OFF"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textStyle="bold"
                        android:id="@+id/food_item_offer"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textScaleX="1.1"/>
                </TableRow>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busicuty Milk shake"
                android:id="@+id/item_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textScaleX="1.1"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/sample_text"
                android:id="@+id/item_description"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="14dp"
                android:typeface="sans"
                android:maxLength="200"
                android:ellipsize="end"
                android:textScaleX="1.2"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 200"
                    android:id="@+id/food_item_price"
                    android:gravity="center_vertical"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.8">

                <android.support.v7.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    card_view:cardElevation="3dp"
                    card_view:cardCornerRadius="22dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:background="@android:color/transparent"
                        android:id="@+id/item_sub"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:id="@+id/item_qty_grid"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

                <android.support.v7.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    card_view:cardElevation="3dp"
                    card_view:cardCornerRadius="22dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:background="@android:color/transparent"
                    android:id="@+id/item_add"
                    android:textSize="20sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </TableRow>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
