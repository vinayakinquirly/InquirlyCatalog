<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="5sp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/layout_category">

                <ImageView
                    android:id="@+id/item_picture"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:src="@drawable/placeholder_check_2"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_offer"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="20% OFF"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textStyle="bold"
                        android:id="@+id/food_item_offer"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textScaleX="1.1"/>
                </TableRow>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busicuty Milk shake"
                android:id="@+id/item_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textScaleX="1.1"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/sample_text"
                android:id="@+id/item_description"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="18dp"
                android:typeface="sans"
                android:maxLines="2"
                android:maxLength="200"
                android:ellipsize="end"
                android:textScaleX="1.2"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 200"
                        android:id="@+id/food_item_price"
                        android:gravity="center_vertical"
                        android:textColor="#FFF"
                        android:textSize="24sp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1.8">

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="20dp"
                        card_view:cardElevation="4dp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:background="@android:color/transparent"
                            android:id="@+id/item_sub"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical|center_horizontal" />
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/item_qty_grid"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="20dp"
                        card_view:cardElevation="4dp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="+"
                            android:background="@android:color/transparent"
                            android:id="@+id/item_add"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:gravity="center_vertical|center_horizontal" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </TableRow>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
