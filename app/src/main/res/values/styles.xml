<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppThemeBlue" parent="AppTheme">
        <!--<item name="colorPrimary">#4a90e2</item>-->
        <item name="colorPrimary">#5C6BC0</item>
        <item name="colorPrimaryDark">#1A237E</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="AppThemeRed" parent="AppTheme">
        <!--<item name="colorPrimary">#4a90e2</item>-->
        <item name="colorPrimary">#f44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>


    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="ToolbarSearchView" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="searchViewStyle">@style/CustomSearchView</item>
    </style>

    <style name="TabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="button_no_background">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="label_small_hint_default">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#4a90e2</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:background">#ffffff</item>
    </style>


    <style name="button_white">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_grey">
        <item name="android:background">@drawable/custom_button_grey</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="label_error_white">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="label_small_grey">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B3B2B1</item>
    </style>

    <style name="label_small_blue">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4A90E2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CoolberryTheme" parent="AppThemeRed">
        <item name="colorPrimary">#712b8d</item>
        <item name="colorPrimaryDark">#e1a6ce38</item>
    </style>

</resources>

